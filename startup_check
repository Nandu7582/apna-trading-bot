import os
import sys
from dotenv import load_dotenv

load_dotenv()

REQUIRED_ENV_VARS = {
    "TELEGRAM_BOT_TOKEN": "Telegram Bot Token",
    "TELEGRAM_CHAT_ID": "Telegram Chat ID",
    "API_KEY": "Angel One API Key",
    "CLIENT_CODE": "Angel One Client Code",
    "PASSWORD": "Angel One Password",
    "TOTP_SECRET": "Angel One TOTP Secret"
}

def run_startup_check():
    print("üîç Checking Environment Variables...\n" + "=" * 50)
    missing = []
    for var, label in REQUIRED_ENV_VARS.items():
        if not os.getenv(var):
            print(f"‚ùå Missing: {label} ({var})")
            missing.append(var)
        else:
            print(f"‚úÖ Found: {label} ({var})")
    print("=" * 50)
    if missing:
        print("‚ùå Startup check failed. Please set all required environment variables.")
        sys.exit(1)
    else:
        print("‚úÖ All required environment variables are set. Proceeding...")
